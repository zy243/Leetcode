class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0 || (x % 10 == 0 && x != 0)) {
            return false;
        }

        int reversed=0;
        while(x!=0){
            int digit=x%10;
            reversed=digit*10+reversed;
            x/=10;
            
        }
        return x==reversed||x==reversed%10;
    }
}
